generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}


model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  role      String
  password  String
  files     File[]
  createdAt DateTime  @default(now())
}

model File {
  id        Int      @id @default(autoincrement())
  url       String   
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
